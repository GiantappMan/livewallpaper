<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:lan="clr-namespace:MultiLanguageManager;assembly=MultiLanguageManager.WPF"
    xmlns:tb="http://www.hardcodet.net/taskbar">

    <ContextMenu
        x:Key="ContextMenu"
        cal:Action.Target="ContextMenuViewModel"
        x:Shared="false">
        <MenuItem cal:Message.Attach="About()" lan:Xaml.Key="common_about" />
        <MenuItem cal:Message.Attach="VIP()" lan:Xaml.Key="common_vip" />
        <MenuItem cal:Message.Attach="QQ()" lan:Xaml.Key="common_qq" />
        <Separator />
        <MenuItem cal:Message.Attach="Config()" lan:Xaml.Key="common_config" />
        <Separator />
        <MenuItem cal:Message.Attach="Main()" lan:Xaml.Key="contextMenu_main" />
        <MenuItem cal:Message.Attach="ExitApp()" lan:Xaml.Key="common_exit" />
    </ContextMenu>
</ResourceDictionary>